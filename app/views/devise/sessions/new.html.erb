<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "ui form") do |f| %>
  <div class="ui field">
    <%= f.label :username %><br />
    <%= f.email_field :username, autofocus: true %>
  </div>

  <div class="ui field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="ui field">
      <%= f.check_box :remember_me, :class => "ui checkbox" %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="ui actions">
    <%= f.submit "Log in", :class => "ui button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
